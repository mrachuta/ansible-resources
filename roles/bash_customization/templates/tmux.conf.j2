#
# {{ ansible_managed }}
#

# Enable TPM (plugin manager)
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'thewtex/tmux-mem-cpu-load'

# Set VIM key bindings
set-window-option -g mode-keys vi

# Window activity
set -g monitor-activity on
set -g visual-activity on

# Enable mouse
set -g mouse on

# Buffer size
set-option -g history-limit 10000

# Pane colours
set -g window-style 'fg=default,bg=colour235'
set -g window-active-style 'fg=default,bg=colour000'

# Pane border
set -g pane-border-style 'bg=default'
set -g pane-border-style 'fg=colour238'

# Active pane border
set -g pane-active-border-style 'bg=default'
set -g pane-active-border-style 'fg=blue'

# Enable color schema
set -g default-terminal 'xterm-256color'

# Customize status bar
set-option -g status on
set-option -g status-interval 1
set-option -g status-justify centre
set-option -g status-keys vi
set-option -g status-position bottom
set-option -g status-style fg=colour136,bg=colour235
set-option -g status-left-length 50
set-option -g status-left-style default
set-option -g status-left "#[bg=yellow,fg=black] #S #[default]"
set-option -g status-right-length 140
set-option -g status-right-style default
set-option -g status-right "#[fg=white,bg=colour17] #($TMUX_PLUGIN_MANAGER_PATH/tmux-mem-cpu-load/tmux-mem-cpu-load) "
set-option -ag status-right "#[fg=white,bg=colour25] Uptime: #(uptime | cut -f 4-5 -d ' ' | cut -f 1 -d ',') "
set-option -ag status-right "#[fg=white,bg=lightgray,dim] %a %k:%M:%S %Y-%m-%d #[default]"
set-window-option -g window-status-style fg=colour244
set-window-option -g window-status-style bg=default
set-window-option -g window-status-current-style fg=colour166
set-window-option -g window-status-current-style bg=default

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
